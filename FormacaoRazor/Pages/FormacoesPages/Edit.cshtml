@page
@model FormacaoRazor.Pages.FormacoesPages.EditModel

@{
    ViewData["Title"] = "Edit";
}
@section Styles {
    <link href="~/AdminLte3/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <div class="row">
        <div class="card card-orange col-md-6">
            <div class="card-header">
                <h3 class="card-title">Editar Formação</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" class="form-horizontal">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Formacao.FormacaoId" />
                    <div class="form-group row">
                        <label asp-for="Formacao.FormacaoNome" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Formacao.FormacaoNome" class="form-control" />
                            <span asp-validation-for="Formacao.FormacaoNome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Formacao.FormacaoCod" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Formacao.FormacaoCod" class="form-control " />
                            <span asp-validation-for="Formacao.FormacaoCod" class="text-danger"></span>
                        </div>

                        <label asp-for="Formacao.FormacaoValidade" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Formacao.FormacaoValidade" class="form-control" />
                            <span asp-validation-for="Formacao.FormacaoValidade" class="text-danger"></span>
                        </div>

                        <label asp-for="Formacao.FormacaoDuracao" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Formacao.FormacaoDuracao" class="form-control" />
                            <span asp-validation-for="Formacao.FormacaoDuracao" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="Formacao.FormacaoColor" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2 input-group my-colorpicker colorpicker-element" data-colorpicker-id="2">
                            <input asp-for="Formacao.FormacaoColor" type="text" class="form-control" data-original-title="" title="" />
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-square"></i></span>
                            </div>
                            <span asp-validation-for="Formacao.FormacaoColor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <input type="submit" value="Gravar" class="btn btn-primary" />
                    &nbsp;|&nbsp;<a asp-page="Index" class="btn btn-default">Voltar</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/AdminLte3/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script>
        $(function () {
            //Colorpicker
            $('.my-colorpicker').colorpicker()

            $('.my-colorpicker').on('colorpickerChange', function (event) {
                $('.my-colorpicker .fa-square').css('color', event.color.toString());
            });
        })
    </script>
}