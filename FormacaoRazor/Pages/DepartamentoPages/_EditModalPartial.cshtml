@using FormacaoRazor.Models.Common;
@model Departamento
<!-- /.modal -->
<div class="modal fade" id="editDepartamento" tabindex="-1" role="dialog" aria-labelledby="editDepartamentoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDepartamentoLabel">Editar Departamento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="EditModalPartial">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DepartamentoId" />
                    <div class="form-group row">
                        <label asp-for="DepartamentoNumero" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="DepartamentoNumero" class="form-control" />
                            <span asp-validation-for="DepartamentoNumero" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DepartamentoNome" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="DepartamentoNome" class="form-control" />
                            <span asp-validation-for="DepartamentoNome" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" data-save="modal">Gravar</button>
            </div>
        </div>
    </div>
</div>