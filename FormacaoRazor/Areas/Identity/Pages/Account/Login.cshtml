@page
@model LoginModel
@{
    Layout = "~/Areas/Identity/Pages/Shared/_LoginLayout.cshtml";
}
<div class="login-logo">
    <a href="#">Centro de <b>for</b>mação</a>
</div>
<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Faça login, para iniciar a sua sessão!</p>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>

            </div>
            <div class="input-group mb-3">
                <input asp-for="Input.Password" class="form-control" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <p class="mb-1">
            <a asp-page="./ForgotPassword">Esqueceu-se da sua password?</a>
        </p>

    </div>
    <!-- /.login-card-body -->
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
