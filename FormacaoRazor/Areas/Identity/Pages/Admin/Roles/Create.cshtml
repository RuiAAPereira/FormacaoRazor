@page
@model FormacaoRazor.Areas.Identity.Pages.Admin.Roles.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-md-8 col-sm12">
        <div class="card card-orange">
            <div class="card-header">
                <h3 class="card-title">Editar Função</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Fechar">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remover">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <form method="post" class="form-horizontal">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-sm-4 control-label">Nome:</label>
                        <div class="col-sm-8">
                            <input asp-for="ApplicationRole.Name" class="form-control" />
                            <span asp-validation-for="ApplicationRole.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 control-label">Descrição:</label>
                        <div class="col-sm-8">
                            <textarea type="text" asp-for="ApplicationRole.Description" class="form-control"></textarea>
                            <span asp-validation-for="ApplicationRole.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Gravar" class="btn btn-primary" />
                    &nbsp;|&nbsp;<a asp-page="Index" class="btn btn-default">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
